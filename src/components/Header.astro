    #logo-container {
        justify-self: end;
        margin-right: 2rem;
    }
    #logo {
        width: 5em;
        height: auto;
        transition: transform ease-in-out 0.15s;
    }
    #logo:hover {
        transform: scale(1.1);
    }
    #nav-container {
        justify-self: start;
        display: flex;
        gap: 1rem;
    }
    .nav-link {
        color: inherit;
        margin-right: 2em;
    }
    #icon-container {
