---
const { experience } = Astro.props;
---

<section>
  <h2>Experience</h2>
  {experience.items.filter((item: { visible: boolean; }) => item.visible).map((item: { position: string; company: string; date: string; summary: string; }) => (
    <div class="job">
      <h3>{item.position} at {item.company}</h3>
      <p>{item.date}</p>
      <button class="toggle-summary">Details</button>
      <div class="summary" style="display: none;">
        <Fragment set:html={item.summary} />
      </div>
    </div>
  ))}
</section>

<script>
  document.querySelectorAll('.toggle-summary').forEach(button => {
    button.addEventListener('click', () => {
      const next = button.nextElementSibling;
      const summary = next instanceof HTMLElement ? next : null;
      if (summary) {
        summary.style.display = summary.style.display === 'none' ? 'block' : 'none';
      }
    });
  });
</script>

<style>
  .job {
    margin-bottom: 1.5rem;
  }
</style>